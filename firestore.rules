rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId} {
      // Allow the user to upload/read only their own avatar
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: public images folder
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}

